<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="com.example.javafx.HelloController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="15" vgap="15" stylesheets="@style.css">
<padding><Insets bottom="20.0" left="20.0" right="20.0"
                 top="20.0" /> </padding>
<Label fx:id="welcomeText" text="Welcome" GridPane.columnIndex="0"
       GridPane.rowIndex="0" GridPane.columnSpan="7" id="welcomeText" />
    <Label  text="Number1" GridPane.columnIndex="0"
           GridPane.rowIndex="1" GridPane.columnSpan="7" />
    <TextField fx:id = "number1" text="" GridPane.columnIndex="5"
               GridPane.rowIndex="1" GridPane.columnSpan="7"/>
    <Label  text="Number2:" GridPane.columnIndex="0"
           GridPane.rowIndex="2" GridPane.columnSpan="7" />
    <TextField fx:id = "number2" text="" GridPane.columnIndex="5"
               GridPane.rowIndex="2" GridPane.columnSpan="7"/>


<Button text="+" styleClass="numberButton"
        GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#add"/>
    <Button text="-" styleClass="numberButton"
            GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#subtract"/>
    <Button text="*" styleClass="numberButton"
            GridPane.rowIndex="3" GridPane.columnIndex="2" onAction="#multiply"/>
    <Button text="/" styleClass="numberButton"
            GridPane.rowIndex="3" GridPane.columnIndex="3" onAction="#divide"/>
        </GridPane>
